#!/bin/bash

# Function to delete regular files with .js extension
delete_js_files() {
    for file in "$1"/*; do
        if [[ -f "$file" && "${file##*.}" == "js" ]]; then
            rm "$file"
        elif [[ -d "$file" ]]; then
            delete_js_files "$file"
        fi
    done
}

# Call the function with the current directory
delete_js_files "."
